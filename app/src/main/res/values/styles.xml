<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="StrategoImageButton">
        <item name="android:padding">14dip</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:background">@android:color/background_dark</item>-->
    </style>

    <style name="ChessTextViewStyle" parent="android:Widget.TextView">
        <item name="android:typeface">sans</item>
    </style>

    <style name="ChessTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:typeface">sans</item>
    </style>

    <style name="MyTextStyle" parent="ChessTextAppearance">
        <item name="android:paddingTop">@dimen/normalPaddingY</item>
        <item name="android:paddingBottom">@dimen/normalPaddingY</item>
        <item name="android:paddingLeft">@dimen/normalPaddingX</item>
        <item name="android:paddingRight">@dimen/normalPaddingX</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
    </style>
    <style name="MyHeaderTextStyle" parent="@style/MyTextStyle">
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:paddingTop">@dimen/headerPaddingY</item>
        <item name="android:paddingBottom">@dimen/headerPaddingY</item>
        <item name="android:paddingLeft">@dimen/headerPaddingX</item>
        <item name="android:paddingRight">@dimen/headerPaddingX</item>
    </style>
    <style name="MyTitleTextStyle" parent="@style/MyTextStyle">
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>
    <style name="MyLabelTextStyle">
        <item name="android:typeface">sans</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="MyNormalTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:typeface">monospace</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="DarkThemeTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:typeface">monospace</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="MyRowTextStyle" parent="@style/MyTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="MySmallTextStyle">
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="CaptureImageStyle">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
    </style>
    <style name="CaptureTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CaptureTextStyleSmall" parent="@style/CaptureTextStyle">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>
    <style name="MyRowStyle">
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ChessTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="FightStyle">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">30sp</item>
        <!--<item name="android:padding">40dip</item>-->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PortraitButton">
        <item name="android:minWidth">150dip</item>
        <item name="android:minHeight">75dip</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">15dip</item>
        <item name="android:padding">20dip</item>
    </style>

    <style name="GameButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#FFFFFF</item> <!-- Text color -->
        <item name="android:padding">16dp</item> <!-- Padding -->
        <item name="android:textSize">20sp</item> <!-- Text size -->
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item> <!-- Font family -->
    </style>
</resources>
